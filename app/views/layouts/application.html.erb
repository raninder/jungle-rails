<!DOCTYPE html>
<html>
<head>
  <title>Jungle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

   <main class="container">
  <% if flash.now[:alert] %>
    <div class="alert alert-danger"><%= flash.now[:alert] %></div>
  <% end %>
  <%= render 'layouts/top_nav' %>
<% if current_user %>
  Signed in as <%= "#{current_user.email}" %> | <%= link_to "Logout", '/logout' %>
<% else %>
  <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
<% end %>
 
  <% if active_sale? %>
  <p class="alert alert-info">
  There is an active <%= "Back to School" %> sale going on!
  <strong> Everything is <%= 15 %>% off </strong>
  </p>
  <% end %>
    <%= yield %>
  </main>

  <%= yield :end_of_body %>
</body>
</html>
